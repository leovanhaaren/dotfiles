[init]
    defaultBranch = main

[gpg]
    format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[commit]
    gpgsign = true

[includeIf "gitdir/i:~/workspaces/**"]
    path = ~/dotfiles/git/personal.gitconfig

# Override for ksyos
[includeIf "gitdir/i:~/workspaces/ksyos/**"]
    path = ~/dotfiles/git/ksyos.gitconfig