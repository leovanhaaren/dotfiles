alias ccc="
podman run -it \
  -v $(pwd):/app \
  -v /Users/leo/.claude:/home/claude/.claude \
  -v /Users/leo/.claude.json:/home/claude/.claude.json \
  claude-code-sandbox

"

# Config
alias reload="exec zsh"

# Include custom aliases
