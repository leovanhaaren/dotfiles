{
  "editor.fastScrollSensitivity": 3,
  "editor.fontFamily": "'Fira Code'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.suggest.insertMode": "replace",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.linkedEditing": true,
  "editor.lineNumbers": "relative",
  //
  "cSpell.language": "en",
  //
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  //
  "files.autoSave": "onWindowChange",
  //
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreRebaseWarning": true,
  //
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
  //
  "githubPullRequests.createOnPublishBranch": "never",
  //
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.includeSingleLineSymbols": true,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "push:command"
  ],
  "gitlens.hovers.currentLine.over": "line",
  //
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontFamily": "'MesloLGS NF'",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  //
  "workbench.preferredHighContrastColorTheme": "GitHub Dark Default",
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.iconTheme": "vscode-icons",
  //
  "vsicons.dontShowNewVersionMessage": true,
  //
  "window.zoomLevel": 0.5,
  //
  "launch": {},
  //
  "update.showReleaseNotes": false,
  //
  "zenMode.hideLineNumbers": false,
  "zenMode.centerLayout": false,
  "zenMode.silentNotifications": true,
  "zenMode.fullScreen": true,
  "zenMode.showTabs": "multiple",
  //
  "breadcrumbs.enabled": false,
  //
  "dev.containers.dockerPath": "podman",
  //
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.format.enable": false,
  //
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.enable": false,
  //
  "dotfiles.installCommand": "install-vscode.sh",
  "dotfiles.repository": "https://github.com/leovanhaaren/dotfiles.git",
  "dotfiles.targetPath": "~/dotfiles"
}